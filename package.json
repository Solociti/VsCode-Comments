{
  "name": "struxt-code-comments",
  "displayName": "VsCode Comments",
  "description": "Manage comments in the internal vscode comments controller",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/Solociti/VsCode-Comments.git"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languageModelTools": [
      {
        "name": "struxt-code-comments_addComment",
        "tags": [
          "comments",
          "code-review"
        ],
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "addComment",
        "displayName": "Add Code Comment",
        "modelDescription": "Add a comment to a specific line in a file using the internal comment controller. Always provide a username identifying the agent or user leaving the comment (e.g. 'Copilot', 'Agent', or the user's name).",
        "inputSchema": {
          "type": "object",
          "properties": {
            "filePath": {
              "type": "string",
              "description": "The absolute path to the file."
            },
            "line": {
              "type": "number",
              "description": "The 1-based line number to add the comment to."
            },
            "body": {
              "type": "string",
              "description": "The markdown content of the comment."
            },
            "username": {
              "type": "string",
              "description": "Display name for the comment author. Should almost always be set — use the agent or model name (e.g. 'Copilot') or the user's name. Defaults to 'User' if omitted."
            }
          },
          "required": [
            "filePath",
            "line",
            "body"
          ]
        }
      },
      {
        "name": "struxt-code-comments_addReply",
        "tags": [
          "comments",
          "code-review"
        ],
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "addReply",
        "displayName": "Add Reply to Code Comment",
        "modelDescription": "Add a reply to an existing comment thread at a specific line in a file. Always provide a username identifying the agent or user leaving the reply (e.g. 'Copilot', 'Agent', or the user's name).",
        "inputSchema": {
          "type": "object",
          "properties": {
            "filePath": {
              "type": "string",
              "description": "The absolute path to the file."
            },
            "line": {
              "type": "number",
              "description": "The 1-based line number of the existing comment thread to reply to."
            },
            "body": {
              "type": "string",
              "description": "The markdown content of the reply."
            },
            "username": {
              "type": "string",
              "description": "Display name for the reply author. Should almost always be set — use the agent or model name (e.g. 'Copilot') or the user's name. Defaults to 'User' if omitted."
            }
          },
          "required": [
            "filePath",
            "line",
            "body"
          ]
        }
      },
      {
        "name": "struxt-code-comments_getComments",
        "tags": [
          "comments",
          "code-review"
        ],
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "getComments",
        "displayName": "Get Code Comments",
        "modelDescription": "Get all comments in a specific file.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "filePath": {
              "type": "string",
              "description": "The absolute path to the file."
            }
          },
          "required": [
            "filePath"
          ]
        }
      },
      {
        "name": "struxt-code-comments_deleteComment",
        "tags": [
          "comments",
          "code-review"
        ],
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "deleteComment",
        "displayName": "Delete Code Comment",
        "modelDescription": "Delete a comment thread at a specific line in a file.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "filePath": {
              "type": "string",
              "description": "The absolute path to the file."
            },
            "line": {
              "type": "number",
              "description": "The 1-based line number of the comment to delete."
            }
          },
          "required": [
            "filePath",
            "line"
          ]
        }
      }
    ],
    "commands": [
      {
        "command": "struxt-code-comments.addComment",
        "title": "Add Comment"
      },
      {
        "command": "struxt-code-comments.deleteCommentThread",
        "title": "Delete Comment",
        "icon": "$(trash)"
      },
      {
        "command": "struxt-code-comments.deleteComment",
        "title": "Delete Comment",
        "icon": "$(trash)"
      },
      {
        "command": "struxt-code-comments.nextCommentThread",
        "title": "Next Comment",
        "icon": "$(arrow-down)"
      },
      {
        "command": "struxt-code-comments.previousCommentThread",
        "title": "Previous Comment",
        "icon": "$(arrow-up)"
      },
      {
        "command": "struxt-code-comments.replyComment",
        "title": "Reply"
      }
    ],
    "menus": {
      "editor/lineNumber/context": [
        {
          "command": "struxt-code-comments.addComment",
          "group": "navigation"
        }
      ],
      "comments/commentThread/title": [
        {
          "command": "struxt-code-comments.previousCommentThread",
          "group": "navigation@1",
          "when": "commentController == struxt-code-comments"
        },
        {
          "command": "struxt-code-comments.nextCommentThread",
          "group": "navigation@2",
          "when": "commentController == struxt-code-comments"
        },
        {
          "command": "struxt-code-comments.deleteCommentThread",
          "group": "navigation@3",
          "when": "commentController == struxt-code-comments"
        }
      ],
      "comments/comment/title": [
        {
          "command": "struxt-code-comments.deleteComment",
          "group": "navigation",
          "when": "commentController == struxt-code-comments"
        }
      ],
      "comments/comment/context": [
        {
          "command": "struxt-code-comments.deleteComment",
          "group": "inline",
          "when": "commentController == struxt-code-comments"
        },
        {
          "command": "struxt-code-comments.deleteComment",
          "group": "navigation",
          "when": "commentController == struxt-code-comments"
        }
      ],
      "comments/commentThread/context": [
        {
          "command": "struxt-code-comments.replyComment",
          "group": "inline",
          "when": "commentController == struxt-code-comments"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
